{
  "variables": {
    "identity_endpoint": "{{ env `OS_AUTH_URL` }}",
    "cacert": "cacert.pem",
    "domain_name": "{{ env `OS_DOMAIN_NAME` }}",
    "tenant_name": "{{ env `OS_TENANT_NAME` }}",
    "username": "{{ env `OS_USERNAME` }}",
    "password": "{{ env `OS_PASSWORD` }}",
    "flavor": "{{ env `OS_FLAVOR` }}",
    "openstack_source_image_name": "openstack-alpine-image-3.9.3.raw"
  },
  "builders": [
    {
      "type": "openstack",
      "identity_endpoint": "{{ user `identity_endpoint` }}",
      "cacert": "{{ user `cacert` }}",
      "domain_name": "{{ user `domain_name` }}",
      "tenant_name": "{{ user `tenant_name` }}",
      "username": "{{ user `username` }}",
      "password": "{{ user `password` }}",
      "flavor": "{{ user `flavor` }}",
      "source_image_name": "{{ user `openstack_source_image_name` }}",
      "image_name": "openstack-jupyterhub-image",
      "config_drive": true,
      "use_blockstorage_volume": true,
      "volume_size": "1",
      "image_tags": [
        "alpine", "jupyterhub"
      ],
      "ssh_username": "alpine"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "ls -alFhR /tmp/data"
      ]
    }
  ]
}
